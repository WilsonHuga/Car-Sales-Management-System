<UserControl x:Class="Car_Sales_Management_System.Views.Components.SignupControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Car_Sales_Management_System.Views.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Height="400" Width="400">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="Register New User" FontWeight="Bold" FontSize="18" Margin="0,0,0,10" TextAlignment="Center"/>

            <TextBlock Text="First Name"/>
            <TextBox x:Name="FirstNameTextBox" Margin="0,5"/>

            <TextBlock Text="Last Name"/>
            <TextBox x:Name="LastNameTextBox" Margin="0,5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailTextBox" Margin="0,5"/>

            <TextBlock Text="Password"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,5"/>

            <TextBlock Text="Phone"/>
            <TextBox x:Name="PhoneTextBox" Margin="0,5"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Content="Submit" Width="80" Margin="0,0,10,0" Padding="6" Background="#000046" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Submit_Click" />
                <Button Content="Clear" Width="80" Padding="6" Background="#000046" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Clear_Click" />
            </StackPanel>
            <TextBlock x:Name="StatusTextBlock" Foreground="Green" Margin="0,1"/>

            <Button Content="Already a member?" HorizontalAlignment="Center" Margin="0,10,0,0" Click="SwitchToLogin_Click" Background="Transparent" BorderBrush="{x:Null}" Foreground="Blue"/>
            <!-- <Button Content="Cancel" Width="80" Margin="10,0,0,0" Padding="6" Background="DarkRed" Foreground="White" BorderThickness="0" Cursor="Hand" Click="Cancel_Click"/> -->
        </StackPanel>
    </Border>
</UserControl>
