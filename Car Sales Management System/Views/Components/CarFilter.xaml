<UserControl x:Class="Car_Sales_Management_System.Views.Components.CarFilter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">

    <Border Background="#F0F0F0" Padding="20" CornerRadius="10" Margin="10">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Left" Width="960">

            <!-- Header -->
            <TextBlock Text="Filter Cars"
                       FontSize="20"
                       FontWeight="SemiBold"
                       Foreground="#333333"
                       Margin="0,0,0,10"/>

            <!-- Filter Options -->
            <WrapPanel HorizontalAlignment="Left" ItemHeight="60" ItemWidth="220" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Car Make"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Make"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Car Model"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Model"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Body Type"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Body Type"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Fuel Type"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Fuel Type"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Transmission"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Transmission"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Color"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Color"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Price Range"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Price Range"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Year"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Year"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Mileage"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Mileage"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Width="200" Margin="5">
                    <TextBlock Text="Condition"
                               FontSize="12"
                               Foreground="#333333"
                               Margin="0,0,0,5"/>
                    <ComboBox Width="200" Text="Condition"/>
                </StackPanel>
            </WrapPanel>

            <!-- Keyword Search -->
            <TextBox x:Name="KeywordBox"
                     Width="420"
                     Height="32"
                     Padding="8,4"
                     FontSize="13"
                     Text="Keyword..."
                     Foreground="Gray"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="#FFFFFF"
                     Margin="5,0,0,10"/>

            <!-- Submit Button -->
            <Button Content="View Listings"
                    Width="160"
                    Height="38"
                    Margin="5,0,0,0"
                    Background="#000046"
                    Foreground="White"
                    FontWeight="Bold"
                    HorizontalAlignment="Left"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Border>
</UserControl>