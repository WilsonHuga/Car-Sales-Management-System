<UserControl x:Class="Car_Sales_Management_System.Views.Components.ResetPasswordControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="10" Padding="20" HorizontalAlignment="Center" VerticalAlignment="Center" Background="White" Height="400" Width="400">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3"/>
        </Border.Effect>

        <StackPanel Margin="20">
            <TextBlock Text="Email" Margin="0,0,0,5"/>
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Reset Token" Margin="0,0,0,5"/>
            <TextBox x:Name="TokenTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="New Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
            <TextBlock Text="Confirm Password" Margin="0,0,0,5"/>
            <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,10"/>
            <Button Content="Reset Password" Background="#000046" Foreground="White" BorderThickness="0" Cursor="Hand" Margin="0,0,0,10"/>
            <Button Content="Back to Login" Background="#000046" Foreground="White" BorderThickness="0" Cursor="Hand"/>
            <TextBlock x:Name="StatusTextBlock" Foreground="Red"/>
        </StackPanel>
    </Border>
</UserControl>